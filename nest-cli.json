{
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "webpack": false,
    "assets": [
      {
        "include": "./templates/*.hbs",
        "outDir": "./dist"
      },
      {
        "include": "./assets",
        "outDir": "./dist"
      },
      {
        "include": "./*.json",
        "outDir": "./dist"
      }
    ],
    "watchAssets": true
  }
}
